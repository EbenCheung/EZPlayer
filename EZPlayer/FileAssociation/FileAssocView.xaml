<Window x:Class="EZPlayer.View.FileAssociationView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:EZPlayer.ViewModel"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="{StaticResource FileAssociationView}" Height="212" Width="199"
        WindowStartupLocation="CenterOwner">
    <Window.DataContext>
        <vm:FileAssocViewModel></vm:FileAssocViewModel>
    </Window.DataContext>
    <Grid>
        <ListBox ItemsSource="{Binding Extensions}" Height="141" VerticalAlignment="Top">
            <ListBox.ItemTemplate>
                <HierarchicalDataTemplate>
                    <CheckBox Content="{Binding Ext}" IsChecked="{Binding IsAssociated}"/>
                </HierarchicalDataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="{StaticResource Save}"
                Height="23"
                HorizontalAlignment="Left"
                Margin="12,147,0,0"
                Name="button1"
                VerticalAlignment="Top"
                Width="75" Command="{Binding SaveCommand}"/>
    </Grid>
</Window>
