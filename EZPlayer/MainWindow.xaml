<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Wpf="clr-namespace:Vlc.DotNet.Wpf;assembly=Vlc.DotNet.Wpf"
        xmlns:local="clr-namespace:EZPlayer"
        xmlns:BindingUtils="clr-namespace:EZPlayer.BindingUtils"
        x:Class="EZPlayer.MainWindow"
        Title="EZPlayer" Height="260.1" Width="509.2"
        Name ="ThisWindow"
        >
    <Window.Background>
        <SolidColorBrush Color ="Black" />
    </Window.Background>

    <Window.Resources>
        <BindingUtils:CompositeConverter x:Key="FalseToVisible">
            <BindingUtils:InverseBooleanConverter/>
            <BooleanToVisibilityConverter/>
        </BindingUtils:CompositeConverter>
        <Style TargetType="Button" x:Key="TransparentButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Transparent">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Viewbox Name="m_viewBox" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid Width="1109.821">
            <Grid Grid.Row="0">
                <Grid.Background>
                    <VisualBrush Stretch="Uniform">
                        <VisualBrush.Visual>
                            <Image Source="{Binding VideoSource, ElementName=m_vlcControl}" />
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Grid.Background>
                <Wpf:VlcControl x:Name="m_vlcControl" />

                <Button 
                    Visibility="{Binding IsPlaying, ElementName=ThisWindow, Converter={StaticResource FalseToVisible}}"
                    Height="80" Width="80" x:Name="buttonPlayShortCut" Click="ButtonPlayClick"
                    Style="{StaticResource TransparentButton}"
                    >
                    <Image Source="Image/play.png" />
                </Button>
            </Grid>
            <DockPanel x:Name="m_gridConsole" Margin="0,400,0,11.2" Grid.ColumnSpan="2">
                <Grid>
                    <Grid Margin="0,-393.392,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Foreground="White" x:Name="m_timeIndicator" Width="110.936" Margin="0,378.769,0,86.584" RenderTransformOrigin="0.51,0.179"/>
                            <Slider x:Name="m_sliderPosition" Maximum="1" LargeChange="0.05" ValueChanged="SliderValueChanged" PreviewMouseLeftButtonDown="SliderMouseLeftButtonDown" PreviewMouseLeftButtonUp="SliderMouseLeftButtonUp" SmallChange="0.001" Margin="0,378.769,10,104.76" Background="#00FCFCFC" Width="906.186" />
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <StackPanel Orientation="Horizontal" Margin="97.407,20,0,0">
                            <Button Height="50" Width="50"
                                    x:Name="buttonOpen"
                                    Click="ButtonOpenClick"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource TransparentButton}"
                                    >
                                <Image Source="Image/open.png" />
                            </Button>
                            <Button Height="50" Width="50"
                                    x:Name="buttonPrevious"
                                    Click="ButtonPreviousClick"
                                    Style="{StaticResource TransparentButton}"
                                    Margin="10,0,0,0">
                                <Image Source="Image/previous.png" />
                            </Button>
                            <Button Height="50" Width="50"
                                    x:Name="buttonPlay"
                                    Click="ButtonPlayClick"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource TransparentButton}"
                                    >
                                <Image Source="Image/play.png" />
                            </Button>

                            <Button Height="50" Width="50"
                                    x:Name="buttonNext"
                                    Click="ButtonNextClick"
                                    Style="{StaticResource TransparentButton}"
                                    Margin="10,0,0,0">
                                <Image Source="Image/next.png" />
                            </Button>
                            <Button Height="50" Width="50"
                                    x:Name="buttonPause"
                                    IsEnabled="{Binding IsPlaying, ElementName=ThisWindow}"
                                    Style="{StaticResource TransparentButton}"
                                    Click="ButtonPauseClick" Margin="10,0,0,0">
                                <Image Source="Image/pause.png" />
                            </Button>
                            <Button Height="50" Width="50"
                                    x:Name="buttonStop"
                                    IsEnabled="{Binding IsPlaying, ElementName=ThisWindow}"
                                    Click="ButtonStopClick"
                                    Margin="10,0,0,0"
                                    Style="{StaticResource TransparentButton}"
                                    >
                                <Image Source="Image/stop.png" />
                            </Button>
                            <TextBlock VerticalAlignment="Center" Margin="10,0,0,0"><Run Text="Volume:"/></TextBlock>
                            <Slider x:Name="m_sliderVolume" Maximum="100" SmallChange="1" LargeChange="5" Value="{Binding Path=Volume, ElementName=ThisWindow}" ValueChanged="SliderVolumeValueChanged" VerticalAlignment="Center" Margin="10,0,0,0" Width="72"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </DockPanel>
        </Grid>
    </Viewbox>
</Window>
